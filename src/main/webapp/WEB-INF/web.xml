<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>EducationalInstitutionController</web-resource-name>
            <url-pattern>/resources/api/educational-institution</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>StudentController</web-resource-name>
            <url-pattern>/resources/api/student</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>MobileApplicationUserController</web-resource-name>
            <url-pattern>/resources/api/mobile-application-user</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>InstitutionUnityController</web-resource-name>
            <url-pattern>/resources/api/institution-unity</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ROLE_USER</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>